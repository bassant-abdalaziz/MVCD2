@{
    int index = 1;
}

<a href="/Employee/Add">Add Employee</a>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>FirstName</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@(index++)</td>
                <td>@employee.FirstName</td>
                <td><a href="/Employee/GetBySSN/@employee.SSN">Details</a></td>
                <td><a href="/Employee/Edit/@employee.SSN">Edit</a></td>
                <td><a href="/Employee/Delete/@employee.SSN">delete</a></td>
            </tr>
        }
    </tbody>
</table>

